{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "cd .. && pnpm install",
  "devCommand": "pnpm run dev",
  "buildCommand": "cd .. && pnpm run build",
  "crons": [
    {
      "path": "/api/cron/midnight",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/cron/morning",
      "schedule": "0 22 * * *"
    }
  ]
}
